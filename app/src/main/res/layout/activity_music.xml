<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicActivity"
    android:orientation="vertical"
    android:background="#CDEC2E5A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mute"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"
            android:onClick="isMute"
            android:src="@drawable/mute" />

<!--        <ImageView-->
<!--            android:id="@+id/mute"-->
<!--            android:layout_width="53dp"-->
<!--            android:layout_height="53dp"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:src="@drawable/mute" />-->

        <SeekBar
            android:id="@+id/volumeSeekbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <ImageView
            android:id="@+id/unmute"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginEnd="10dp"
            android:onClick="isUnmute"
            android:src="@drawable/unmute"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textviewFileNameMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Music Player.mp3"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="1"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:src="@drawable/music_icon"
        android:id="@+id/imageView"
        />

    <SeekBar
        android:id="@+id/musicSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/textViewProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/_0_00"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="16sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_02_10"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="290dp"
        android:layout_gravity="center"
        android:id="@+id/textViewTotalTime"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/skip_previous"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_skip_previous_24"
            android:backgroundTint="#F50753" />

        <ImageView
            android:id="@+id/play_pause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/pause"
            android:layout_gravity="center"
            android:backgroundTint="#F50753"

            />

        <ImageView
            android:id="@+id/skip_next"
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:background="@drawable/baseline_skip_next_24"
            android:backgroundTint="#F50753"
            android:layout_gravity="center" />


    </LinearLayout>


</LinearLayout>