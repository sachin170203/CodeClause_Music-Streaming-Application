<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mute"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="10dp"
            android:onClick="isMute"
            android:src="@drawable/mute" />

<!--        <ImageView-->
<!--            android:id="@+id/mute"-->
<!--            android:layout_width="53dp"-->
<!--            android:layout_height="53dp"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:src="@drawable/mute" />-->

        <SeekBar
            android:id="@+id/volumeSeekbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:max="100"
            android:progress="50" />

        <ImageView
            android:id="@+id/unmute"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginEnd="10dp"
            android:onClick="isMute"
            android:src="@drawable/unmute" />

    </LinearLayout>

    <TextView
        android:id="@+id/textviewFileNameMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Music Player.mp3"
        android:textColor="#050505"
        android:textSize="20dp"
        android:textStyle="bold"
        android:maxLines="1"/>

    <ImageView
        android:layout_width="172dp"
        android:layout_height="169dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/music_icon"
        />

    <SeekBar
        android:id="@+id/musicSeekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:id="@+id/textViewProgress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginStart="310dp"
        android:id="@+id/textViewTotalTime"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/skip_previous"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/skip_previous"
            android:layout_gravity="center"
            android:backgroundTint="#F50753" />

        <Button
            android:id="@+id/play_pause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/pause"
            android:layout_gravity="center"
            android:backgroundTint="#F50753" />

        <Button
            android:id="@+id/skip_next"
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:background="@drawable/skip_next"
            android:backgroundTint="#F50753"
            android:layout_gravity="center" />


    </LinearLayout>


</LinearLayout>